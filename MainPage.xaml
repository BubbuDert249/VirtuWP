<phone:PhoneApplicationPage 
    x:Class="VirtuWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    SupportedOrientations="Landscape" Orientation="Landscape"
    Tap="LayoutRoot_Tap">

    <Grid x:Name="LayoutRoot" Background="Black">

        <!-- Main VM list -->
        <ListBox x:Name="VmList" Foreground="White" Background="Transparent" Margin="10,10,10,80" SelectionMode="None">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,5" Tap="VmItem_Tap">
                        <TextBlock Text="{Binding Name}" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- New VM Button -->
        <Button x:Name="BtnNewVm" Content="New VM" Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="BtnNewVm_Click"/>

        <!-- Exit VM Button -->
        <Button x:Name="BtnExitVm" Content="Exit VM" Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Visibility="Collapsed" Click="BtnExitVm_Click"/>

        <!-- Shell Output -->
        <ScrollViewer x:Name="ShellOutputScroll" VerticalScrollBarVisibility="Auto" Margin="10,10,10,50" Visibility="Collapsed">
            <TextBlock x:Name="ShellOutput" Foreground="White" FontFamily="Consolas" TextWrapping="Wrap"/>
        </ScrollViewer>

        <!-- Shell Input -->
        <TextBox x:Name="ShellInput" Foreground="White" Background="Black" FontFamily="Consolas" Visibility="Collapsed" KeyDown="ShellInput_KeyDown"/>

        <!-- New VM Menu -->
        <StackPanel x:Name="NewVmMenu" Background="#222" Visibility="Collapsed" Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10">
            <TextBlock Text="Create a new VM" Foreground="White" FontSize="24"/>
            <TextBlock Text="===============" Foreground="White"/>
            <TextBox x:Name="TxtVmName" PlaceholderText="Enter VM name" Margin="0,10"/>
            <Button Content="MS-DOS" Click="BtnMSDOS_Click"/>
            <Button Content="Linux" Click="BtnLinux_Click"/>
            <Button Content="KolibriOS" Click="BtnKolibriOS_Click"/>
            <Button Content="Cancel" Click="BtnCancelNewVm_Click" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</phone:PhoneApplicationPage>
